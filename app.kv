# create your Kivy layout in the kv language here
BoxLayout:
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.3
        Label:
            text: 'Sort by: '
        Spinner:
            id: kv_sort_by
            text: 'spinner demo'
            values: ['placeholder1', '2', '3']
            on_text: app.change_sorting(self.text)
        Label:
            text: 'Add New Song...'
        Label:
            text: 'Title:'
        TextInput:
            id: kv_song_title
            value: ''
            size_hint_y: None
            height: '48dp'
            # pressing 'Tab' moves to next field
            multiline: False
            write_tab: False
        Label:
            text: 'Artist:'
        TextInput:
            id: kv_song_artist
            value: ''
            size_hint_y: None
            height: '48dp'
            multiline: False
            write_tab: False
        Label:
            text: 'Year:'
        TextInput:
            id: kv_song_year
            value: ''
            size_hint_y: None
            height: '48dp'
            multiline: False
            write_tab: False
        Button:
            text: 'Add Song'
            on_release: app.input_song()
        Button:
            text: 'Clear'
            on_release: app.clear_input()
    BoxLayout:
        orientation: 'vertical'
        Label:
            size_hint_y: 0.1
            text: 'test2'
        GridLayout:
            # This area will contain the song list
            id: kv_buttons
            cols: 1
            orientation: 'vertical'
        Label:
            size_hint_y: 0.1
            text: 'test'
